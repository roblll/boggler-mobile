{
  "expo": {
    "name": "Boggler",
    "slug": "boggler",
    "version": "1.0.5",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#f4d456"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rbzla.boggler",
      "infoPlist": {
        "NSCameraUsageDescription": "This allows the app to take photos for solving the game board. Photos are deleted after processing."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#f4d456"
      },
      "package": "com.rbzla.boggler",
      "permissions": ["CAMERA"],
      "versionCode": 1
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
